<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_surface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_700"
        android:titleTextColor="@android:color/white"
        android:title="Nueva Compra" />

    <ScrollView
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Proveedor -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proveedor"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="12dp"
                app:boxStrokeColor="@color/input_border_color"
                app:boxStrokeWidth="2dp"
                app:boxBackgroundColor="@color/input_background"
                app:hintTextColor="@color/input_hint_color">

                <Spinner
                    android:id="@+id/spinnerPurchaseSupplier"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Producto -->
            <!-- Eliminado el spinner de producto -->

            <!-- RecyclerView para líneas de compra -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPurchaseLines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:layout_marginBottom="8dp"
                android:background="@color/background_card"
                android:padding="8dp" />

            <!-- Botón para agregar línea -->
            <Button
                android:id="@+id/btnAddPurchaseLine"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Agregar línea"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/purple_700"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <!-- Total general -->
            <TextView
                android:id="@+id/tvPurchaseTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: 0.00"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginBottom="12dp"
                android:gravity="end" />

            <!-- Total restaurado -->
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: 0.00"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_gravity="end" />

            <!-- Botón para guardar compra -->
            <Button
                android:id="@+id/btnSavePurchase"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_gradient"
                android:text="GUARDAR COMPRA"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
