<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/input_border_color"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/textSyncTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREATE_SALE"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textSyncStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado: pending Â· Intentos: 0"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textSyncDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizado: 2026-02-17 10:00:00"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/textSyncError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorError"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:text="Error" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
