<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_surface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_700"
        android:titleTextColor="@android:color/white"
        android:title="Nueva venta" />

    <ScrollView
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:backgroundTint="@color/card_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cliente"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <Spinner
                        android:id="@+id/spinnerSaleClient"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Líneas de venta"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="6dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSaleLines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="120dp"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btnAddSaleLine"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Agregar línea"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvSaleTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total: 0.00"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/btnSaveSale"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/btn_gradient"
                        android:text="GUARDAR VENTA"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
