<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext for development and device testing. In production, restrict this or use HTTPS. -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
