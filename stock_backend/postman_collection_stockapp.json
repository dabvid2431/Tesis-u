    {
      "name": "Register User (POST /users)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"password123\",\n  \"role\": \"admin\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "{{base_url}}/users", "host": ["{{base_url}}"], "path": ["users"] },
        "description": "Crea un usuario. Ajusta username/password/role según necesites."
      }
    },
    {
      "name": "Login (POST /login)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"password123\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "{{base_url}}/login", "host": ["{{base_url}}"], "path": ["login"] },
        "description": "Inicia sesión y guarda usuario en las variables de entorno para usar después."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Guarda id y username en las variables de entorno si el login es exitoso",
              "if (pm.response.code === 200) {",
              "  const json = pm.response.json();",
              "  if (json.id) pm.environment.set('auth_user_id', json.id);",
              "  if (json.username) pm.environment.set('auth_username', json.username);",
              "  if (json.role) pm.environment.set('auth_role', json.role);",
              "  pm.environment.set('logged_in', 'true');",
              "  console.log('Login guardado en variables: id=' + json.id + ' username=' + json.username);",
              "}"]
          }
        }
      ]
    },
